<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WelcomeScreenFragment">

        <TextView
            android:id="@+id/welcome"
            android:layout_width="297dp"
            android:layout_height="65dp"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:textColor="#567A49"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="             Welcome in Shoe Store " />

        <ImageView
            android:id="@+id/shoppingCart"
            android:layout_width="75dp"
            android:layout_height="52dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="105dp"
            android:scrollbarSize="10dp"
            android:src="@drawable/ic_baseline_shopping_cart_24"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:layout_marginTop="250dp"
            android:paddingStart="30dp"
            android:paddingLeft="30dp"
            android:text="The Shoe Store your gate to shopping for all kinds of shoes \n\n             Thanks for choosing us"
            android:textColor="#258127"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="48dp"
            android:layout_height="39dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="315dp"
            android:src="@drawable/ic_baseline_sentiment_very_satisfied_24" />

        <Button
            android:id="@+id/next"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="420dp"
            android:text="Next"
            android:theme="@style/LoginButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </FrameLayout>
</layout>